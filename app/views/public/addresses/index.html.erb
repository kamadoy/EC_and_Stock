<%= form_with model: @address ,url: {controller: 'public/addresses',action: 'create'} do |f| %>
<div class="container">
<h4>配送先登録・一覧</h4>
 <div class="form-group">
　<label for="postal_code">郵便番号(ハイフンなし)</label>
       <%= f.number_field :postal_code %>
 </div>
<div class="form-group">
　<label for="address">住所</label>
       <%= f.text_field :address %>
</div>
<div class="form-group">
　<label for="name">宛名</label>
       <%= f.text_field :name %>
<%= f.submit '新規登録', class: "btn btn-success btn-sm" %>
</div>
<table class ="table table-bordered">
  <thead class="table-secondary">
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
       <th></th>
        <th></th>
    </thead>
    <today>
    <tr>
<% @addresses.each do |address| %>
<td><%= address.postal_code %></td>
<td><%= address.address %></td>
<td><%= address.name %></td>
<td><%= link_to "編集", edit_address_path(address), class: "btn btn-success btn-sm" %></td>
<td><%= link_to "削除", address_path(address),method: :delete,"data-confirm" => "Are you sure?", class: " btn btn-sm btn-danger" %></td>
 </tr>
<% end %>
<% end %>
  </today>
   </table>
   </div>
  </div>
</div>
 </div>
