<div class="container">
<%= form_with model: @item ,url: admin_items_path do |s| %>
<h4>商品新規登録</h4>

<div class="row">
    <div class="form-group col-md-2">
<label for="img">商品画像</label></div>
 <div class="form-group col-md-2">
<%= s.file_field :image_id, accept: "image/*" %></div>
</div>
<div class="row">
    <div class="form-group col-md-2">
<label for="name">商品名</label></div>
 <div class="form-group col-md-2">
<%= s.text_field :name %></div>
</div>
<div class="row">
    <div class="form-group col-md-2">
<label for="introduction">商品説明</label></div>
 <div class="form-group col-md-2">
<%= s.text_area :introduction %></div>
</div>
<div class="row">
    <div class="form-group col-md-2">
<label for="genre">ジャンル</label></div>
 <div class="form-group col-md-2">
<%= s.select :genre_id, @genres.map{|genre| [genre.name,genre.id]} %></div>
</div>
<div class="row">
    <div class="form-group col-md-2">
<label for="introduction">税抜き価格</label></div>
 <div class="form-group col-md-3">
<%= s.number_field :price %>円</div>
</div>
<div class="row">
    <div class="form-group col-md-2">
<label for="introduction">販売ステータス</label></div>
 <div class="form-group col-md-4">
<%= s.radio_button :is_active, true %>
<%= s.label :is_active, '販売中', value: true %>
<%= s.radio_button :is_active, false %>
<%= s.label :is_active, '販売停止中', value: false %></div>
</div>

   <div class="item_details">
      <div class="mx-auto">
        <%= s.fields_for :item_details do |t| %>
          <%= render "item_details_fields", f: t %>
        <% end %>
      </div>
<div class="links">
    <%= link_to_add_association '色追加', s, :item_details,
      class: 'btn btn-success',
      
      data: {
        association_insertion_node: '#detail-association-insertion-point',
        association_insertion_method: 'after' }
     %>


  </div>


<%= s.submit '新規登録', class: "btn btn-success btn-sm" %>
<% end %>
</div>